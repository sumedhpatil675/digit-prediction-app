# Use an official TensorFlow runtime as a parent image
FROM tensorflow/tensorflow:latest

# Set the working directory to /app
WORKDIR /app

# Copy the current directory contents into the container at /app
COPY . /app

# Install Flask without dependencies that cause issues
RUN pip install --no-cache-dir --ignore-installed Flask

# Install necessary libraries for TensorFlow
RUN pip install tensorflow

# Copy the script for creating and training the model
COPY create_and_train_model.py /app

# Make port 80 available to the world outside this container
EXPOSE 80

# Define environment variable
ENV NAME World

# Run the create_and_train_model.py script when the container launches
CMD ["python", "create_and_train_model.py"]
